<Window x:Class="To_Do_List.ModifyItemsForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:To_Do_List"
        mc:Ignorable="d"
        Title="ModifyItemsForm" Height="450" Width="800">
    <Grid>
        <Label Content="Modify your To Do item:" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="22"/>
        <TextBox x:Name="descriptionTb" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="522" Height="254" Margin="63,110,0,0"/>
        <TextBox x:Name="titleTb" HorizontalAlignment="Left" Margin="63,54,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="522" Height="25" FontSize="18"/>
        <Calendar x:Name="dueDateCalendar" HorizontalAlignment="Left" Margin="598,194,0,0" VerticalAlignment="Top" SelectedDatesChanged="dateChanged"/>
        <Button x:Name="submitButton" Content="Submit" HorizontalAlignment="Left" Margin="288,369,0,0" VerticalAlignment="Top" Width="92" Height="35" FontSize="18" Click="submitButton_Click"/>
        <Button x:Name="cancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="434,369,0,0" VerticalAlignment="Top" Width="91" Height="35" FontSize="18" Click="cancelButton_Click"/>
        <Label Content="Select deadline:" HorizontalAlignment="Left" Margin="634,168,0,0" VerticalAlignment="Top" FontSize="14"/>
        <TextBox x:Name="costTb" HorizontalAlignment="Left" Margin="598,106,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="179" Height="31" FontSize="18"/>
        <Label Content="Total cost: (if any):" HorizontalAlignment="Left" Margin="627,81,0,0" VerticalAlignment="Top" FontSize="14"/>
        <TextBox x:Name="idTb" HorizontalAlignment="Left" Margin="63,24,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="134" Height="25" FontSize="18"/>
        <Label Content="Item ID:" HorizontalAlignment="Left" Margin="7,22,0,0" VerticalAlignment="Top" FontSize="14" Width="63"/>
        <Label Content="Title:" HorizontalAlignment="Left" Margin="14,52,0,0" VerticalAlignment="Top" FontSize="14" Width="62"/>
        <Label Content="Example: 55.55" HorizontalAlignment="Left" Margin="642,137,0,0" Foreground="DarkGray" VerticalAlignment="Top" FontSize="12" Width="92"/>
        <Label Content="Description:" HorizontalAlignment="Left" Margin="7,81,0,0" VerticalAlignment="Top" FontSize="14" Width="94"/>

    </Grid>
</Window>
